{
  "name": "nyc-all-demo",
  "version": "0.0.1",
  "description": "Demo repo to brainstorm nyc --all issue",
  "main": "index.js",
  "repository": "https://github.com/mrchief/nyc-all-demo.git",
  "author": "mrchief <mrchief_2000@yahoo.com>",
  "license": "MIT",
  "scripts": {
    "test": "rimraf .nyc_output && cross-env NODE_ENV=test nyc ava"
  },
  "dependencies": {

  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-core": "^6.24.1",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "cross-env": "^4.0.0",
    "nyc": "^10.3.2",
    "rimraf": "^2.6.1"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "cache": true,
    "check-coverage": true,
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/node_modules/**"
    ]
  }
}
